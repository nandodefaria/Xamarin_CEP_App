<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cep.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="correiosLogo.png" x:Name="LOGO"/>
        <Entry Placeholder="Digite o cep (apenas números)..." PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="CEP"/>
        <Button Text="Buscar Cep" TextColor="White" BackgroundColor="#004168" x:Name="BOTAO"/>
        <Label Text="" x:Name="RESULTADO"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
